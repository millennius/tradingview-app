{
  "name": "kite-zerodha",
  "version": "0.1.0",
  "description": "An electron based desktop client app for Zerodha's trading platform Kite.",
  "main": "main.js",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "kite-zerodha"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "millennius",
              "name": "kite-zerodha"
            }
          }
        }
      ]
    }
  },
  "scripts": {
    "make": "electron-forge make",
    "generate-release": "nativefier --name \"Kite Zerodha\" \"https://kite.zerodha.com/\"",
    "package-windows": "rimraf app && node packager.js",
    "publish": "electron-forge publish",
    "dist": "electron-builder --linux snap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/millennius/tradingview-app.git"
  },
  "keywords": [
    "tradingview"
  ],
  "author": "Millennius Labs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/millennius/tradingview-app/issues"
  },
  "homepage": "https://github.com/millennius/tradingview-app#readme",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "nativefier": "^43.1.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "electron": "^12.0.7",
    "electron-builder": "22.9.1",
    "electron-winstaller": "^5.0.0"
  }
}
